generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}




model User {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String   @unique
  telefono  String?
  role Roles
  creadoEn  DateTime @default(now())
  editadoEn DateTime @updatedAt
  address   Address? @relation
}

model Address {
  id        Int      @id @default(autoincrement())
  city      String
  zip       String
  address   String
  address2  String?
  userId    Int      @unique  // Esta es la clave foránea que asegura la relación 1 a 1
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Roles {
    ADMIN
    CLIENT
}


